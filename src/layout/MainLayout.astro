---
import { ClientRouter } from "astro:transitions";
import { NavBar } from "../components";
import '../styles/global.css';

interface Props {
  pageTitle: string;
  showNav?: boolean;
  description?: string;
  ogImage?: string;
}

const {
	pageTitle, 
	showNav = true,
	description = "Desarrollador Full Stack apasionado por crear soluciones web innovadoras. Explora mi portafolio de proyectos.",
	ogImage = "/logo-3.svg" // Imagen de vista previa para compartir (usa tu logo-3)
} = Astro.props;

// IMPORTANTE: Reemplaza por tu dominio real en producción para previews correctas
const siteUrl = "https://cristian-acosta-portafolio.netlify.app/";
---


<html lang="es" class="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo-3.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="color-scheme" content="dark" />
		
		<!-- SEO Básico -->
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Cristian Andres Acosta Techera" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={`${siteUrl}${ogImage}`} />
		<meta property="og:image:type" content="image/svg+xml" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Logo de Cristian Acosta" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={siteUrl} />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${siteUrl}${ogImage}`} />
		<meta name="twitter:image:alt" content="Logo de Cristian Acosta" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href={siteUrl} />
	</head>
	<body class="bg-slate-900 text-slate-100">
        {
            showNav && <NavBar />
        }
		<slot/>
        <ClientRouter />
	</body>
</html>
